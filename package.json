{
  "name": "perudo-plus",
  "version": "1.0.0",
  "description": "A networked multiplayer PC game inspired by Perudo/Dudo with cards and mixed dice",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc && npx vite build",
    "build:server": "tsc",
    "build:client": "npx vite build",
    "start": "node dist/server/index.js",
    "start:server": "node dist/server/index.js",
    "dev:server": "ts-node src/server/index.ts",
    "dev:client": "npx vite",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
  },
  "keywords": [
    "perudo",
    "dice",
    "multiplayer",
    "game",
    "threejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "howler": "^2.2.4",
    "three": "^0.160.0",
    "uuid": "^9.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/howler": "^2.2.12",
    "@types/node": "^20.10.0",
    "@types/three": "^0.160.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.0"
  }
}
